<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smime="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboard_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/navigation_bar_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="设置"/>
    </LinearLayout>

    <com.longjunhao.inputmethoddemo.views.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="match_parent"
        android:keyBackground="@color/key_color"
        android:background="@color/keyboardview_background"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_height="300dp" />
</LinearLayout>